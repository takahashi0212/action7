<div class="wrapper">
<%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |f| %>
  <%= f.text_field :keyword, placeholder: "キーワードを検索する", class:"search-input"  %>
  <%= f.submit "検索", class: "search-btn" %>
<% end %>
 <ul class='item-lists'>
    <% @posts.each do |post| %>
      <li class='list'>
        <%= render partial: "post", locals: { post: post } %>
      </li>
    <% end %>
</ul>


<div class="post-area">
    <a href="/posts/new">
      <span class="btn-flat-border">投稿！</span>
    </a>
  </div>
</div>
</div>