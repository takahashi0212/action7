<h1>Posts#index</h1>
<div>

<% @posts.each do |post| %>
  <%= link_to post_path(post.id), method: :get do %>
    <%= image_tag post.image.variant(resize:'200x200') if post.image.attached?%>
  <% end %>
    <%= post.name %>

    <span><%= post.price %>円</span>
  
<% end %>

  <a href="/posts/new">
    <span>投稿！</span>
  </a>
</div>