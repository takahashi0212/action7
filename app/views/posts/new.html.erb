<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h1>Post</h1>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @post, url: posts_path, local: true do |f| %>
      <%= render 'posts/error_messages', model: f.object %>
        <div class='field'>
          <div class='field-label'>
            <label>アイテム画像</label>
            <span class="indispensable">必須</span>
            <i>クリックしてファイルをアップロード</i>
          </div>
          <div class='field-input'>
            <%= f.file_field :image %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <label>アイテム名</label>
            <span class="indispensable">必須</span>
          </div>
            <div class='field-input'>
              <%= f.text_field :name, placeholder:"アイテム名（必須 40文字まで)" %>
            </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <label>説明</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
              <%= f.text_area :description, class:"items-text", id:"item-info", placeholder:"アイテムの説明（必須 1,000文字まで）" %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <label>カテゴリー</label>
            <span class="indispensable">必須</span>
          </div>
          <div class="form">
            <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <span>価格</span>
          </div>
          <div class='field-input'>
          <%# <span>¥</span> %>
              <%= f.text_field :price, placeholder:"半角数字で入力" %>
          </div>
        </div>

        <%# <div class='actions'> %>
        <div class="sell-btn-contents">
            <%= f.submit "投稿する", class: 'btn' %>
            <%=link_to 'もどる', root_path, class: 'back-btn'%>
          <%# </div> %>
        </div>
      <% end %>
    </div>    
  </div>
</div>
