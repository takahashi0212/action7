<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h1>log in</h1>
    </div>

    <div class='account-page__inner--right user-form'>
     <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      <div class='error-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <div class='field'>
        <div class='field-label'>
          <label>メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='field-input'>
          <%= f.email_field :email %>
        </div>

        <div class='field'>
          <div class='field-label'>
            <label>パスワード</label>
            <i>(英数字8文字以上)</i>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "ログイン", class: 'btn' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>